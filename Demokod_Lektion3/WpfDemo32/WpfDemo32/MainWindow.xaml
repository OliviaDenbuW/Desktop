<Window x:Class="WpfDemo32.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo32"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<TextBlock HorizontalAlignment="Left" Margin="225,93,0,0" TextWrapping="Wrap" Text="{Binding Path=Name,FallbackValue=none}" VerticalAlignment="Top" FontSize="36"/>
		<TextBlock HorizontalAlignment="Left" Margin="225,146,0,0" TextWrapping="Wrap" Text="{Binding Path=Email}" VerticalAlignment="Top" FontSize="36"/>
		<Button Content="Change" HorizontalAlignment="Left" Margin="554,91,0,0" VerticalAlignment="Top" Width="147" Height="74" FontSize="24" Click="Button_Click"/>
		<TextBox HorizontalAlignment="Left" Height="45" Margin="60,43,0,0" TextWrapping="Wrap" Text="{Binding Path=Name,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="165" FontSize="22" BorderBrush="Black"/>

	</Grid>
</Window>
