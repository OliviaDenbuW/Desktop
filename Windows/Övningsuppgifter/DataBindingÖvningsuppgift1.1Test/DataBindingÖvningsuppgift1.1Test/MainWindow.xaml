<Window x:Class="DataBindingÖvningsuppgift1._1Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBindingÖvningsuppgift1._1Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="58,126,0,0" TextWrapping="Wrap" Text="{Binding Path=Text, ElementName=txtInput}" VerticalAlignment="Top"/>
        <TextBox x:Name="txtInput" HorizontalAlignment="Left" Height="23" Margin="58,179,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="322,126,0,0" VerticalAlignment="Top" Height="16" Width="140"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="322,179,0,0" TextWrapping="Wrap" Text="{Binding Path=Value, ElementName=slider, Mode=OneWay}" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
