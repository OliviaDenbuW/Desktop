@model DemoASPNETRepetitionMVC.ViewModels.PersonViewModel

@using DemoASPNETRepetitionMVC
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.12.4.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

<form asp-controller="Home" asp-action="Index" method="post">
    <label asp-for="MyPerson.Name"></label>
    <input asp-for="MyPerson.Name" type="text" />
    <span asp-validation-for="MyPerson.Name"></span>

    <br />
    <br />

    <label asp-for="MyPerson.Email"></label>
    <input asp-for="MyPerson.Email" type="text" />

    <br /><br />

    <select asp-for="MyPerson.Category" asp-items=@Model.Categories></select>

    <input type="submit" value="Spara" />

</form>