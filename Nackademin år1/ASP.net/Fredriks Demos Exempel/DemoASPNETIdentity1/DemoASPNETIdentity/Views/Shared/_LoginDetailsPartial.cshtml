@using Microsoft.AspNetCore.Identity;
@using DemoASPNETIdentity.ModelsIdentity;

@inject SignInManager<ApplicationUser> signInManager
@inject UserManager<ApplicationUser> userInManager

@if (signInManager.IsSignedIn(User))
{
<ul class="nav navbar-nav">
    @if (User.IsInRole("Administrator"))
    {
        <li><a asp-area="" asp-controller="Admin" asp-action="Index">Admin</a></li>

    }
    <li><a asp-area="" asp-controller="Account" asp-action="Logoff">LogOff</a></li>

</ul>

}
else
{
    <ul class="nav navbar-nav">

        <li><a asp-area="" asp-controller="Account" asp-action="Register">Contact</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">New User</a></li>

    </ul>
}





